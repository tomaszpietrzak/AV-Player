<Window x:Class="AV_Player.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AV_Player"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="400" 
        Width="600"
        >
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Open" CanExecute="Open_CanExecute" Executed="Open_Executed" />
        <CommandBinding Command="MediaCommands.Play" CanExecute="Play_CanExecute" Executed="Play_Executed" />
        <CommandBinding Command="MediaCommands.Pause" CanExecute="Pause_CanExecute" Executed="Pause_Executed" />
        <CommandBinding Command="MediaCommands.Stop" CanExecute="Stop_CanExecute" Executed="Stop_Executed" />
    </Window.CommandBindings>
    <Grid Name="LayoutRoot">
        <Grid x:Name="Overlay" Panel.ZIndex="1000" Visibility="Visible" >
            <Grid.Background>
                <SolidColorBrush Color="Black" Opacity=".5"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!-- Add controls as needed -->
            <StatusBar Grid.Row="1" Grid.ColumnSpan="3"  Background="Transparent">
                <StatusBarItem  HorizontalContentAlignment="Stretch">
                    <Slider Name="sliProgress" Thumb.DragStarted="sliProgress_DragStarted"  Thumb.DragCompleted="sliProgress_DragCompleted" ValueChanged="sliProgress_ValueChanged" />
                </StatusBarItem>
            </StatusBar>



            <StatusBar Grid.Column="0" Grid.Row="2" Background="Transparent" HorizontalAlignment="Left">
                <Button Command="ApplicationCommands.Open" MaxHeight="20" Background="Transparent">
                    <Image Source="/AV Player;component/Images/folder.png"  />
                </Button>
                <TextBlock Name="lblProgressStatus" Background="Transparent">00:00:00</TextBlock>
            </StatusBar>

            <StatusBar Grid.Column="1" Grid.Row="2" MaxHeight="20" Background="Transparent" HorizontalAlignment="Center">
                <Button Command="MediaCommands.Play">
                    <Image Source="/AV Player;component/Images/play.png" />
                </Button>
                <Button Command="MediaCommands.Pause">
                    <Image Source="/AV Player;component/Images/pause.png" />
                </Button>
            </StatusBar>
            <StatusBar Grid.Column="2" Grid.Row="2" Background="Transparent" HorizontalAlignment="Right">
                <ProgressBar Name="pbVolume" Width="50" Height="12" Maximum="1" Value="{Binding ElementName=mePlayer, Path=Volume}" />
            </StatusBar>
        </Grid>

        <ContentControl x:Name="MainContent" >

            <MediaElement  Name="mediaPlayer" LoadedBehavior="Manual" />
        </ContentControl>

    </Grid>
</Window>
